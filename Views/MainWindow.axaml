<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ControllerExplorer.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="500"
        x:Class="ControllerExplorer.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Controller Explorer"
        MinWidth="800"
        MinHeight="400">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <Style Selector="Border.byte-cell">
            <Setter Property="BorderBrush" Value="#404040"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Background" Value="#1a1a1a"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
        <Style Selector="Border.byte-cell.changed">
            <Setter Property="Background" Value="#2d4a2d"/>
            <Setter Property="BorderBrush" Value="#4a7c4a"/>
        </Style>
        <Style Selector="TextBlock.hex-value">
            <Setter Property="FontFamily" Value="Consolas, Menlo, Monaco, monospace"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#00ff00"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style Selector="TextBlock.binary-value">
            <Setter Property="FontFamily" Value="Consolas, Menlo, Monaco, monospace"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style Selector="TextBlock.byte-index">
            <Setter Property="FontFamily" Value="Consolas, Menlo, Monaco, monospace"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#2a4a6a"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d2d" Padding="12">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Text="Controller Explorer"
                           FontSize="20"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <Button Grid.Column="1"
                        Content="Refresh Controllers"
                        Command="{Binding RefreshCommand}"
                        Padding="16,8"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" ColumnDefinitions="250,*" Margin="12">
            <!-- Controller List -->
            <Border Background="#1e1e1e" CornerRadius="8" Padding="8">
                <Grid RowDefinitions="Auto,*">
                    <TextBlock Text="Controllers"
                               FontWeight="SemiBold"
                               Margin="8,4,8,12"
                               Foreground="#aaaaaa"/>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Controllers}"
                             SelectedItem="{Binding SelectedController}"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="vm:ControllerViewModel">
                                <Border Padding="8" Margin="2" CornerRadius="4">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ProductName}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding VendorProductId}"
                                                   FontSize="11"
                                                   Foreground="#888888"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Controller Details -->
            <Border Grid.Column="1" Background="#1e1e1e" CornerRadius="8" Margin="12,0,0,0" Padding="16">
                <Grid RowDefinitions="Auto,Auto,*,Auto">
                    <!-- Controller Info -->
                    <StackPanel IsVisible="{Binding SelectedController, Converter={x:Static ObjectConverters.IsNotNull}}">
                        <TextBlock Text="{Binding SelectedController.ProductName}"
                                   FontSize="18"
                                   FontWeight="Bold"/>
                        <TextBlock Margin="0,4,0,0">
                            <Run Text="Manufacturer: " Foreground="#888888"/>
                            <Run Text="{Binding SelectedController.Manufacturer}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="ID: " Foreground="#888888"/>
                            <Run Text="{Binding SelectedController.VendorProductId}"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- No Controller Selected Message -->
                    <TextBlock IsVisible="{Binding SelectedController, Converter={x:Static ObjectConverters.IsNull}}"
                               Text="Select a controller from the list"
                               Foreground="#666666"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontStyle="Italic"/>

                    <!-- Byte Grid Header -->
                    <TextBlock Grid.Row="1"
                               Text="Raw Data (9 Bytes)"
                               FontWeight="SemiBold"
                               Margin="0,20,0,8"
                               Foreground="#aaaaaa"
                               IsVisible="{Binding SelectedController, Converter={x:Static ObjectConverters.IsNotNull}}"/>

                    <!-- Byte Grid -->
                    <ItemsControl Grid.Row="2"
                                  ItemsSource="{Binding SelectedController.Bytes}"
                                  IsVisible="{Binding SelectedController, Converter={x:Static ObjectConverters.IsNotNull}}"
                                  VerticalAlignment="Top">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="vm:ByteDisplayViewModel">
                                <Border Classes="byte-cell"
                                        Classes.changed="{Binding HasChanged}"
                                        Width="75">
                                    <StackPanel>
                                        <TextBlock Classes="byte-index">
                                            <Run Text="Byte "/>
                                            <Run Text="{Binding ByteIndex}"/>
                                        </TextBlock>
                                        <TextBlock Classes="hex-value"
                                                   Text="{Binding HexValue}"
                                                   Margin="0,4"/>
                                        <TextBlock Classes="binary-value"
                                                   Text="{Binding BinaryUpperNibble}"/>
                                        <TextBlock Classes="binary-value"
                                                   Text="{Binding BinaryLowerNibble}"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Last Update -->
                    <StackPanel Grid.Row="3"
                                Orientation="Horizontal"
                                IsVisible="{Binding SelectedController, Converter={x:Static ObjectConverters.IsNotNull}}"
                                Margin="0,12,0,0">
                        <TextBlock Text="Last Update: " Foreground="#666666"/>
                        <TextBlock Text="{Binding SelectedController.LastUpdateTime}"
                                   FontFamily="Consolas, Menlo, Monaco, monospace"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#252525" Padding="12,8">
            <Grid ColumnDefinitions="Auto,*">
                <Ellipse Width="8" Height="8"
                         Fill="{Binding IsReading, Converter={StaticResource BoolToColorConverter}}"
                         VerticalAlignment="Center"
                         Margin="0,0,8,0"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           Foreground="#aaaaaa"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
